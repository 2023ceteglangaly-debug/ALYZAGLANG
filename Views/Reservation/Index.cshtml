@model Alyza_Glang__Final.ViewModels.ReservationListViewModel

@{
    ViewData["Title"] = "All Reservations";
}

<div class="main-content-card">

    @* The button that was here has been removed *@
    <h1 class="text-center">All Reservations</h1>
    </div>
    
    <hr />

    @if (Model.Reservations.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Mobile
                    </th>
                    <th>
                        Booked Restaurant
                    </th>
                    <th>
                        Date and Time
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Reservations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RestaurantName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.date)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center mt-5">
             <h4>There are no reservations yet.</h4>
             <p class="text-muted">Reservations can be made from the main restaurant list.</p>
        </div>
    }

</div>