@model Alyza_Glang__Final.Models.Reservation

@{
    ViewData["Title"] = "Delete Reservation";
}

<div class="main-content-card">
    <h1>Delete Confirmation</h1>
    <h3 class="text-danger">Are you sure you want to permanently delete this reservation?</h3>
    <hr />

    <div>
        <h4>Reservation Details:</h4>
        
        @* This <dl> is a "Description List" to display data neatly *@
        <dl class="row mt-4">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Mobile)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Mobile)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.date)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.date)
            </dd>
        </dl>
        
        <form asp-action="Delete" class="mt-4">
            @* This hidden field is essential for the server to know which reservation to delete. *@
            <input type="hidden" asp-for="Id" />
            
            <input type="submit" value="Yes, Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Cancel</a>
        </form>
    </div>

</div>