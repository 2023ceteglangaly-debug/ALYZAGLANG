<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jainabbb__Restaurant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    

      @* --- ADD THESE THREE LINES --- *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Poppins:wght@400;600;700&family=Lato&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <div class="dashboard-layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <span class="sidebar-logo">Jainabbb_Restaurant</span>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li><a asp-area="" asp-controller="Restaurant" asp-action="Index">Restaurants</a></li>
                    <li><a asp-area="" asp-controller="Reservation" asp-action="Index">Reservations</a></li>
                </ul>
            </nav>
            <div class="sidebar-footer">
                <!-- Add Menu button removed as requested -->
            </div>
        </aside>

        <!-- Main Content -->
        <div class="main-area">
            <!-- Top Bar -->
            <header class="topbar">
                <div class="search-bar">
                    <input type="text" placeholder="Search here..." />
                </div>
                <div class="topbar-actions">
                    <!-- Icons removed as requested -->
                    <span class="user-info">Hello dear customer!</span>
                </div>
            </header>
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
        <!-- Footer outside main-area to span full width -->
        <footer class="footer">
            &copy; 2025 - Jainabbb_Restaurant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>