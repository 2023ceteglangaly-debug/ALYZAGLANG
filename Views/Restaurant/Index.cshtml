@model RestaurantListViewModel

@* This is the outer frame *@
<div class="content-card"> 
    @* This is the new inner panel *@
    <div class="content-card-body"> 

        <h1 class="text-center">Restaurants</h1>
        </div>

        @if (TempData["RestaurantDeleted"] != null)
        {
            <p class="text-success">@TempData["RestaurantDeleted"]</p>
        }

        <hr />

        @if (!Model.Restaurants.Any())
        {
            <div class="text-center mt-5">
                <h4>There are no restaurants listed yet.</h4>
                <p class="text-muted">Click the "Add new restaurant" button to get started.</p>
            </div>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Cuisine</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var restaurant in Model.Restaurants)
                    {
                        <tr>
                            <td>@restaurant.name</td>
                            <td>@restaurant.cuisine</td>
                            <td>@restaurant.borough</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@restaurant.Id" class="btn btn-sm btn-info">Edit</a>
                                <a asp-action="Delete" asp-route-id="@restaurant.Id" class="btn btn-sm btn-danger">Delete</a>
                                <a asp-action="Add" asp-controller="Reservation" asp-route-restaurantId="@restaurant.Id" class="btn btn-sm btn-success">Reserve</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <div class="mt-4">
            <a class="btn btn-primary" asp-action="Add">Add new restaurant</a>
        </div>

    </div>
</div>