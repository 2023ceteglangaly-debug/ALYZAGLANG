@model Alyza_Glang__Final.Models.Restaurant // Make sure this model name is correct

@{
    ViewData["Title"] = "Add Restaurant";
}

<div class="main-content-card">
    <h1>Add a New Restaurant</h1>
    <hr />

    <form asp-action="Add">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group mb-3">
            <label asp-for="name" class="control-label"></label>
            <input asp-for="name" class="form-control" placeholder="Enter restaurant name" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="cuisine" class="control-label"></label>
            <input asp-for="cuisine" class="form-control" placeholder="e.g., Italian, Mexican, etc." />
            <span asp-validation-for="cuisine" class="text-danger"></span>
        </div>
        
        <div class="form-group mb-3">
            <label asp-for="borough" class="control-label">Location</label>
            <input asp-for="borough" class="form-control" placeholder="Enter the location or borough" />
            <span asp-validation-for="borough" class="text-danger"></span>
        </div>
        
        <div class="form-group mt-4">
            <input type="submit" value="Add Restaurant" class="btn btn-primary" />
        </div>
    </form>

    @* --- THIS IS THE FIXED LINK --- *@
    <div class="mt-4">
        <a asp-action="Index" class="back-link">Back to list</a>
    </div>

</div>